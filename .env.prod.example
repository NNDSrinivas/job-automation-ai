# Production Environment Variables
# Copy this to .env.prod and fill in real values

# Database Configuration
DB_USER=job_automation_user
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://job_automation_user:your_secure_password_here@postgres:5432/job_automation

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your_super_secure_secret_key_minimum_32_characters_long
JWT_SECRET_KEY=another_super_secure_jwt_secret_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=noreply@yourcompany.com

# LinkedIn OAuth (optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Glassdoor API (optional)
GLASSDOOR_PARTNER_ID=your_glassdoor_partner_id
GLASSDOOR_API_KEY=your_glassdoor_api_key

# Anti-Detection Configuration
PROXY_API_KEY=your_proxy_service_api_key
CAPTCHA_API_KEY=your_captcha_solving_service_key

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# File Upload
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx

# Job Scraping Configuration
MAX_CONCURRENT_SCRAPING_JOBS=5
SCRAPING_DELAY_SECONDS=2
MAX_PAGES_PER_SEARCH=10

# Application Processing
MAX_APPLICATIONS_PER_DAY=50
APPLICATION_DELAY_MINUTES=5
